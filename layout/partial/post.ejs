<!-- 单个文章 -->

<a href="<%- url_for(post.path) %>">
  <h2><%- post.title %></h2>
  <p><%= date(post.date, "YYYY-MM-DD") %></p>
</a>

<% if (theme.debug.enable) { %>
  <p>has post type: <%- post.type != null %></p>
<% } %>

<!-- 如果是首页/某个tag页面 -->
<% if (is_home() || is_tag()) { %>

  <% if (theme.debug.enable) { %>
  <p>tags: <%= post.tags.length %></p>
  <p>content: <%- post.content.length %></p>
  <p>excerpt: </p>
  <% } %>

  <!-- 主题内置自动摘要 -->
  <p><%- post.content.substring(0, theme.auto_excerpt.length) %></p>
<% } %>