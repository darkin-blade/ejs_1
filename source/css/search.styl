/**
* 本地搜索器样式配置
*/

.local-search-input-cls {
  width: 200px;
  margin-left: 20px;
  margin-top: 5px;
  margin-bottom: 20px;
  padding: 8px 12px;
  
  border-radius: 4px;
  border: 1px solid #CCC;
  color: #666;
  font-size: 14px;
  &::-webkit-search-cancel-button {
    // 关闭按钮
    cursor: pointer;
  }
}

/* 搜索结果面板 */
.local-search-result-cls {
  max-height: 90%;
  padding-right: 30px;
  overflow-y: scroll;
  overflow-x: hidden;
}

.local-search-result-cls li {
  list-style: none;
}

/* 每篇文章的标题 */
.search-result-title {
  transition-duration: 0.5s;

  padding-left: 10px;
  font-weight: bold;
  font-family: 'varela';
  text-decoration: none;
  color: var(--text_blue);
  &:hover {
    color: var(--text_orange);
  }
}

/* 每篇文章内容 */
.search-result p {
  color: black;
  text-decoration: none;
  word-break: break-all;
  
  padding: 10px;
  border-radius: 10px;

  background-color: rgba(240, 240, 240, 0);
  transition-duration: 0.5s;
  &:hover {
    background-color: rgba(240, 240, 240, 1);
  }
}

/* 搜索的输入框 */
.local-search-plugin {
  position: relative;
  z-index: 2;
}

.search-highlight {
  color: var(--text_orange);
}