/**
* 本地搜索器样式配置
*/

.local-search-input-cls {
  width: 200px;
  margin-left: 20px;
  margin-top: 10px;
  padding: 8px 12px;
  
  border-radius: 4px;
  border: 1px solid #CCC;
  color: #666;
  font-size: 14px;
}

.local-search-result-cls {
  max-height: 90%;
  padding-right: 30px;
  overflow-y: scroll;
  word-break: break-all; 
  &::-webkit-scrollbar{
    width: 0px;
  }
}