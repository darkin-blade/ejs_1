/**
* 正文样式,方便其他repository引用
*/

@font-face {
  font-family: 'varela';
  src: url('/font/VarelaRound.ttf');
}

.normal_table {
  border-collapse: collapse;
  width: 100%;
}

.normal_table thead tr {
  background-color: rgb(248, 248, 248);
}

.normal_table th,
.normal_table td {
  padding-top: 5px;
  padding-bottom: 5px;
  // 防止latex公式过挤
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}

.normal_table tr {
  transition-duration: 0.5s;
}

.normal_table tr:hover {
  background-color: rgb(240, 240, 240);
}

embed {
  width: 80%;
  margin-left: 10%;
  margin-right: 10%;
  height: 600px;
}

blockquote {
  padding-left: 10px;
  padding-top: 1px;
  padding-bottom: 1px;
  border-left: 6px solid rgb(175, 175, 175);
  background-color: rgb(248, 248, 248);
}

p,
ul,
ol,
h1,
h2,
h3,
h4,
h5,
h6,
.normal_table {
  word-break: normal;
  strong {
    color: var(--text_orange);
  }
  em {
    // 将强调改为隐藏
    font-style: normal;
    color: #999;
  }
}

.mid_block ul li,
.main_block ul li,
.mid_block ol li,
.main_block ol li {
  margin-top: 5px;
  padding-bottom: 5px;
  // 解决latex公式过挤的问题
}