ol {
  list-style: none;
  counter-reset: ol_cnt;
}
ol > li {
  margin-top: 5px;
  padding-bottom: 5px;
  position: relative;
}
ol > li:before {
  position: absolute;
  left: -24px;
  
  color: #464646;
  font-family: 'varela';
  font-size: 20px;
  font-weight: 1000;

  content: counter(ol_cnt) ".";
  counter-increment: ol_cnt;
}