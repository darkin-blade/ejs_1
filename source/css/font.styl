/**
 * 站名,标题字体,代码字体,链接字体等
 */
 
a {
  text-decoration: none;
}

h1, h2, h3, h4, h5, h6, #post_name, #web_name, .post_title {
  font-family: 'varela', sans-serif;
}

p,
ul,
.normal_table {
  font-family: "Arimo for Powerline", serif;
}

body {
  font-size: large;
}

code {
  /* 行间代码 */
  font-family: monospace;
  font-size: inhert;
  word-break: break-all;
  background-color: var(--code_grey);
}

.code_pre {
  /* 大代码块 */
  font-size: larger;
}

/* 正文内的链接 */
.mid_container div div a {
  transition-duration: 0.5s;
  color: var(--link_blue);
}

.mid_container div div a:hover {
  color: var(--hover_blue);
}

/* 标签分类 */
.mid_tag,
.mid_category {
  transition-duration: 0.5s;
  font-weight: bold;
  font-size: 20px;
  margin: 5px;
  line-height: 30px;

  text-decoration: none;
  font-family: 'varela';
  color: var(--text_blue);
}

.mid_tag:hover,
.mid_category:hover {
  color: var(--text_orange);
}

#web_name {
  /* 网站名 */
  transition-duration: 0.5s;
  font-size: 55px;
  font-weight: bold;
  
  /* color: var(--text_blue); */
  color: white;
  text-decoration: none;
  text-shadow: 0px 0px 2px #000;
}

#web_name:hover {
  /* color: var(--text_orange) */
  text-shadow: 0px 0px 4px #000;
}

#bottom_block_inner {
  /* 底部页码 */
  color: white;
  font-weight: 800;
}

.post_title {
  /* 摘要页 */
  transition-duration: 0.5s;
  font-size: 25px;
  font-weight: bold;
  
  margin-top: 10px;
  display: block;

  color: var(--text_blue);
  text-decoration: none;
}

.post_title:hover {
  color: var(--text_orange);
}

.post_excerpt {
  /* 主页的文章摘要 */
  height: 350px;
  overflow-y: hidden;
  overflow-x: hidden;
}

.post_excerpt h1,
.post_excerpt h2,
.post_excerpt h3,
.post_excerpt h4,
.post_excerpt h5 {
  font-size: large;
}

.post_date {
  /* 日期 */
  position: relative;
  top: -10px;

  padding-bottom: 3px;
  margin-bottom: -20px;
  
  color: rgba(0, 0, 0, 0.5);
  font-family: 'varela';
  font-size: 15px;  
}

#post_name {
  /* 内容页 */
  text-align: center;
  font-size: 35px;
  font-weight: bold;
}

#guide_title {
  transition-duration: 0.5s;
  padding-top: 5px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);

  font-weight: 900;
  color: var(--text_blue);
  font-family: 'varela';

  cursor: pointer;
  margin-bottom: 10px;
  margin-top: 10px;
}

.guide_2 {
  margin-left: 10px;
}

.guide_3 {
  margin-left: 20px;
}

.guide_4 {
  margin-left: 30px;
}

.guide_5 {
  margin-left: 40px;
}

.guide_1,
.guide_2,
.guide_3,
.guide_4,
.guide_5 {
  padding-left: 15px;
  position: relative;
  font-size: medium;

  border-right: 3px solid rgba(0, 0, 0, 0);
  border-left: 3px solid rgba(0, 0, 0, 0);
  border-radius: 3px;

  cursor: pointer;
  transition-duration: 0.5s;
}

.guide_active {
  border-right: 3px solid var(--box_orange);
  border-left: 3px solid var(--text_orange);
  background-color: var(--box_orange);
}

#guide_title:hover,
.guide_1:hover,
.guide_2:hover,
.guide_3:hover,
.guide_4:hover,
.guide_5:hover {
  color: var(--text_orange);
}

.bar_section {
  font-weight: 900;
}
  
.bar_section  p {
  font-family: 'varela';  
}

.bar_item {
  /* 侧边栏的tags和categories */  
  color: white;
  background: linear-gradient(to right, var(--text_blue) , var(--hover_blue));
  border-radius: 7px;
  border: 0px solid rgba(0, 0, 0, 0);

  word-break: normal;
  text-decoration: none;
  font-family: 'varela';

  padding: 2px 3px;
  margin: 2px;
  line-height: 160%;
}

/* 标题链接 */
.section_1 a,
.section_2 a,
.section_3 a,
.section_4 a,
.section_5 a {
  transition-duration: 0.5s;
  color: var(--text_blue);
  text-decoration: none;
}

.section_1 a:hover,
.section_2 a:hover,
.section_3 a:hover,
.section_4 a:hover,
.section_5 a:hover {
  color: var(--text_orange)
}
